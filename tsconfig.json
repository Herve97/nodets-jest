{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "target": "es2021",
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule":true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  }
}